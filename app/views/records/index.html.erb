<h1 xmlns="http://www.w3.org/1999/html">PB-Form</h1>
<h3>PB-Core metadata editor</h3>
<h4>beta 1.2</h4>


<h3>Existing Records</h3>
<table border="1">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th colspan="3">Options</th>
  </tr>
  <% @records.each do |record| %>
    <tr>
      <td><%= record.id %></td>
      <td><%= link_to title(record), record %> </td>
      <td><%= link_to 'Edit', record %></td>
      <td><%= link_to 'PBCore', record_path(record, format: :pbcore) %></td>
      <td><%= link_to 'DC', record_path(record, format: :dc) %></td>
    </td>
  <% end %>
</table>

<p>
<%= link_to 'Add a new Record', new_record_path %>
</p>