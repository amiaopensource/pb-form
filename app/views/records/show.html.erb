<%= link_to '<< Home', '/' %><br/><br/>

<div class="row"><div><h2 class="col-md-2 text-right">View Metadata</div>
<div><h2 class="col-md-4">record: <%= @record.id %></div></div>

<% Record::terms_for_input.each do |field_name| %>
  <div class="row">
    <div class="col-md-2 text-right"><%= field_name.to_s %>:</div>
    <div class="col-md-10"><%= @record.send(field_name) %></div>
  </div>
<% end %>

<br/><br/>
<%= link_to 'Edit Metadata', edit_record_path(@record) %><br/>
<%= link_to 'Show as PBCore', params.merge(format: :pbcore) %><br/>
<%= link_to 'Show as Dublin Core', params.merge(format: :pbcore) %><br/>
<br/>
<%= button_to "Delete Record", @record, method: :delete, class: "btn btn-danger"  %>